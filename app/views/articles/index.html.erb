<h1>Listing Articles </h1>

<table>
    <tr>
        <th> Title </th>
        <th> Text </th>
        <th colspan="3"> </th>
    </tr>
    <% @articles.each do |article| %>
        <tr>
            <td> <%= article.title %> </td>
            <td> <%= article.text %> </td>
            <td> <%= link_to 'Ver', article_path(article) %> </td>
            <td> <%= link_to 'Editar', edit_article_path(article) %> </td>
            <td> <%= link_to 'Deletar', article_path(article), 
                        method: :delete, 
                        data: {confirm: "Realmente deseja deletar?"} %></td>
        </tr>
    <% end %>
</table>
<br><br><br>
<%= link_to 'Novo Artigo', new_article_path %>